<DashboardDisplay>:

	instructions: instructions

	GridLayout:
		cols: 1
		size: root.width, root.height

		Label:
			text: "Virtual Trading Binder"
			color: 1, 0, 1, 1

		Label:
			id: instructions
			text: "Welcome username!"
			color: 0, 1, 0, 1
			halign: "center"

		Button:
			text: "View or edit your collections"
			on_press: root.newCollectionsScreen()
			color: 0, 0, 1, 1

		Button:
			text: "Log out"
			on_press: root.logOut()
			color: 0, 0, 1, 1


<CollectionsDisplay>:

	instructions: instructions
	collectionContainer: collectionContainer

	GridLayout:
		cols: 1
		size: root.width, root.height

		Label:
			text: "Virtual Trading Binder"
			color: 1, 0, 1, 1

		Label:
			id: instructions
			text: "These are your collections!\nSelect one of your existing collections to make changes to it or simply view it.\nYou can also start a new collection with the Add a new collection button!"
			color: 0, 1, 0, 1
			halign: "center"

		GridLayout:
			id: collectionContainer
			cols: 1

		Button:
			text: "Add a new collection"
			on_press: root.chooseGame()
			color: 0, 0, 1, 1

		Button:
			text: "Go back to the dashboard"
			on_press: root.backToDashboard()
			color: 0, 0, 1, 1

<CollectionViewer>:

	instructions: instructions
	collectionContainer: collectionContainer
	collectionFilter: collectionFilter

	GridLayout:
		cols: 1
		size: root.width, root.height

		Label:
			text: "Virtual Trading Binder"
			color: 1, 0, 1, 1
			size_hint_y: .05

		Label:
			id: instructions
			text: "These are the cards in your Digimon TCG collection!\nScroll through your list of cards or search for a specific card name.\nYou can also search for a set name to filter your collection down to the cards owned in that set (Example: 'BT5').\nYou can also start adding cards to your collection with the Add cards button!"
			color: 0, 1, 0, 1
			halign: "center"
			size_hint_y: .2

		GridLayout:
			cols: 2
			size: root.width, root.height
			size_hint_y: .1

			TextInput:
				id: collectionFilter
				multiline: False

			Button:
				text: "Search/Filter"
				on_press: root.filterCollection()
				color: 0, 0, 1, 1

		ScrollView:
			id: collectionContainer
			do_scroll_x: False
			do_scroll_y: True

		Button:
			text: "Add cards"
			on_press: root.addCards()
			color: 0, 0, 1, 1
			size_hint_y: .1

		Button:
			text: "Go back to your collections"
			on_press: root.backToCollections()
			color: 0, 0, 1, 1
			size_hint_y: .1

<CardAdder>:

	cardContainer: cardContainer
	collectionFilter: collectionFilter
	instructions: instructions

	GridLayout:
		cols: 1
		size: root.width, root.height

		Label:
			text: "Virtual Trading Binder"
			color: 1, 0, 1, 1
			size_hint_y: .05

		Label:
			id: instructions
			text: "When you find a card that you need to add to your collection\nset the quantity to add then press the + button"
			color: 0, 1, 0, 1
			halign: "center"
			size_hint_y: .2

		GridLayout:
			cols: 2
			size_hint_x: 1
			size_hint_y: .1

			TextInput:
				id: collectionFilter
				multiline: False

			Button:
				text: "Search"
				on_press: root.filterByName()
				color: 0, 0, 1, 1

		GridLayout:
			cols: 2
			size_hint_x: 1
			size_hint_y: .1

			Button:
				text: "Filter by set"
				on_press: root.chooseSet()
				color: 0, 0, 1, 1

			Button:
				text: "Clear filters"
				on_press: root.clearFilters()
				color: 0, 0, 1, 1

		ScrollView:
			id: cardContainer
			do_scroll_x: False
			do_scroll_y: True

		Button:
			text: "Go back to your collection"
			size_hint_y: .1
			on_press: root.backToCollection()
			color: 0, 0, 1, 1


<ViewOnlyCard>:

	name: name
	cardnumber: cardnumber
	quantity: quantity

	BoxLayout:
		orientation: 'horizontal'
		size_hint_y: None
		height: 40
		size_hint_x: .9
		spacing: 10	

		Label:
			text: 'name'
			id: name
			size_hint_x: .5
		
		Label:
			text: 'number'
			id: cardnumber
			size_hint_x: .15

		Label:
			text: 'Quantity'
			size_hint_x: .05

		Label: 
			text: '0'
			size_hint_x: .3
			id: quantity

<AddableCard>:

	name: name
	cardnumber: cardnumber
	quantity: quantity

	BoxLayout:
		orientation: 'horizontal'
		size_hint_y: None
		height: 40
		size_hint_x: .9
		spacing: 10	

		Label:
			text: 'name'
			id: name
		
		Label:
			text: 'number'
			id: cardnumber
			size_hint_x: .15

		BoxLayout:
			orientation: 'horizontal'
			size_hint_y: 1
			size_hint_x: .15

			Button:
				text: '<-'
				on_press: root.decreaseQuantity()
				color: 0, 1, 0, 1
				size_hint_x: .04
			
			TextInput:
				text: '1'
				id: quantity
				size_hint_x: .07

			Button:
				text: '->'
				on_press: root.increaseQuantity()
				color: 0, 1, 0, 1
				size_hint_x: .04

		Button:
			text: '+'
			on_press: root.addCards()
			color: 0, 1, 0, 1
			size_hint_x: .1
		